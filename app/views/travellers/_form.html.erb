
<%= render 'shared/errors', obj: @traveller %>

<div class="row">
    <div class="well col-md-8 col-md-offset-2">
    <%= form_for @traveller do |f| %> 
        <%= f.label :travellername %>
        <%= f.text_field :travellername %>
        
        <%= f.label :email %>
        <%= f.email_field :email %>
        
        <%= f.label :password %>
        <%= f.password_field :password %> <%# Star out the password %>
        
        <%# New Record Boolean %>
        <%= f.submit(@traveller.new_record? ? 'Register' : 'Edit Profile', class: "btn btn-success") %>
        <%end%>
    </div>
</div>