
<%= render 'shared/errors', obj: @trip %>

<div class="row">
    <div class="well col-md-8 col-md-offset-2">
    <%= form_for @trip do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :summary %>
        <%= f.text_field :summary %>
        
        <%= f.label :description %>
        <%= f.text_area :description, rows:10 %>
        <%# New Record Boolean %>
        <%= f.submit(@trip.new_record? ? 'Create Trippic' : 'Edit Trippic', class: "btn btn-success") %>
        <%end%>
    </div>
</div>