<%= render 'shared/page_title', title: @trip.name %>

<div class="row">
    <div class="col-md-4 pull-right center">
        <%= link_to gravatar_for(@trip.traveller, size:200), traveller_path(@trip.traveller) %>
        <p>
            <h5> Invisioned to you by: <%= @trip.traveller.travellername %></h5>
        </p> 
    </div>
    
    
    <div class="col-md-8">
        <% if logged_in? and @trip.traveller == current_user %>
            <%= link_to "Edit this Trippic", edit_trip_path(@trip), class: "btn btn-success pull-right" %>
        <%end%>
        <h3><%= @trip.summary %></h3> 
        <div class="show_trip">
            <%= image_tag(@trip.picture.url, class: "gravatar") if @trip.picture? %>
        </div>
        <div class="well">
          <p>
              <strong>Trip Advice:</strong> 
          </p>  
          <%= simple_format(@trip.description) %>
          <div class="pull-right">
              <%= link_to like_trip_path(@trip, like: true), method: :post do %>
                 <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp <%= @trip.thumbs_up_total %>
              <%end%> &nbsp&nbsp&nbsp&nbsp
              <%= link_to like_trip_path(@trip, like: false), method: :post do %>
                 <i class="glyphicon glyphicon-thumbs-down"></i> &nbsp <%= @trip.thumbs_down_total %>
              <%end%>
          </div>
        </div>
    </div>
</div>

<h5><%= link_to 'Return to Trip Listing', trips_path, class: "btn btn-warning btn-small"%></h5>

